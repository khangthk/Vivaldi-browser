  ]
  public_deps = [
    #"//chrome/browser",
    "//components/bookmarks/browser",
    "//components/sync/protocol",
    #"//vivaldi/sync",
  ]
  allow_circular_includes_from = [
    "//vivaldi/sync/notes:sync_notes",
