    "note_model_loader.h",
    "note_node.cc",
    "note_node.h",
    "notes_codec.cc",
    "notes_codec.h",
    "notes_model.cc",
    "notes_model.h",
    "notes_storage.cc",
    "notes_storage.h",
    "scoped_group_notes_actions.cc",
    "scoped_group_notes_actions.h",
  ]
  if (is_android) {
    sources += [
      "note_type.h",
      "note_id.cc",
      "note_id.h",
