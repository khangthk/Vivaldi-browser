# Remove expired repository/package signing key (4A3AA3D6), if present.
remove_old_rpm_key() {
  rpm -q gpg-pubkey-4a3aa3d6 >/dev/null 2>&1
  if [ "$?" -eq "0" ]; then
    rpm -e gpg-pubkey-4a3aa3d6 >/dev/null 2>&1
  fi
}

