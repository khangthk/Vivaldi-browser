group("vivaldi_app") {
  public_deps = [
    ":bundle",
    ":manifestjson",
  ]
}

copy("bundle") {
  sources = [ "module_list" ]
  outputs =  [ "$target_gen_dir/module_list" ]
  deps = [ ":manifestjson" ]
}

copy("manifestjson") {
  sources = [ "src/manifest.template.json" ]
  outputs =  [ "$target_gen_dir/manifest.json" ]
}
